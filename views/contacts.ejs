<%include ./partials/header%>  
<div class="container" style="margin-top:50px">
<h1>Contacts Page</h1>
<a href="/" class="btn btn-primary">Home Page</a>
<hr>
<%contacts.forEach((contact)=>{%>
    <div class="card col-md-4">
        <div class="row">
        <div class="col-md-6">
                <label class="col-md-12" >Name : <%=contact.name%></label>
                <label class="col-md-12">Age : <%=contact.age%></label>
                <form action="/contacts/<%=contact.id%>?_method=PATCH" method="POST">
                    <input type="submit" value="Update">
                </form>
                <form action="/contacts/<%=contact.id%>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form> 
            </div>
        </div>
    </div>
<%});%>

