<%include ./partials/header%>  
<div class="container" style="margin-top:50px">
<h1>Contacts Page</h1>
<a href="/" class="btn btn-info">Home Page</a>
<a href="/contacts/add" class="btn btn-info">Add Contacts</a>
<hr>
<%contacts.forEach((contact)=>{%>
    <div class="card col-md-4">
        <div class="row">
        <div class="col-md-6">
                <label class="col-md-12" >Name : <%=contact.name%></label>
                <label class="col-md-12">Age : <%=contact.age%></label>
                <div class="row">
                        <form class="col-md-6" action="/contacts/<%=contact.id%>?_method=PATCH" method="POST">
                            <input type="submit" class="btn btn-primary" value="Update">
                        </form>
                        <form class="col-md-6" action="/contacts/<%=contact.id%>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-danger" value="Delete">
                            </form> 
                        
                </div>
                <br>
            </div>
        </div>
    </div>
<%});%>

