<%include ./partials/header%>  
<div class="container" style="margin-top:50px">
<h1>Add Contacts</h1>
<a href="/" class="btn btn-info">Home Page</a>
<a href="/contacts" class="btn btn-info">Contacts</a>
<hr>
<form  action="/contacts/<%=updateContact.id%>?_method=PATCH" method="POST">
    <label>Name :</label>
    <input type="text" name="name" value="<%=updateContact.name%>">
    <label>Age :</label>
    <input type="number" name="age" value="<%=updateContact.age%>">
    <label>ID :</label>
    <input type="number" name="id" value="<%=updateContact.id%>">  
    <input type="submit" class="btn btn-primary" value="Update Contact">  
</form>

</div>
<% include ./partials/footer %>

